{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2018",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src", "package.json"],
  "exclude": ["node_modules", "dist"]
}
